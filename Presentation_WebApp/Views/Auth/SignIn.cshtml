@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}


<section class="signin">
    <div class="container">

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
        {
            <div class="alert alert-danger text-center">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="SignIn" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
            <h1>Welcome back</h1>
            <p>Don't have an account yet? <a asp-action="SignUp" asp-controller="Auth">Sign up here</a></p>

            <div class="form-content">
                <div id="form-email" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div id="form-password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div id="form-checkbox" class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="IsPersistent" />
                        <label asp-for="IsPersistent"></label>
                    </div>
                </div>
                <div id="form-button">
                    <button type="submit" class="btn btn-theme-red"><i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</button>


                    <div class="external-providers">
                        <h6>Or sign in with your social account</h6>
                        <div class="providers">
                            <a class="btn-theme-red" asp-action="Google" asp-controller="Auth"><i class="fa-brands fa-google"></i> Google</a>
                            <a class="btn-theme-red" asp-action="Facebook" asp-controller="Auth"><i class="fa-brands fa-facebook"></i> Facebook</a>
                        </div>
                    </div>


                </div>


            </div>
        </form>

    </div>
</section>