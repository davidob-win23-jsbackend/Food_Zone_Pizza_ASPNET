    //         item.classList.remove('active');
    //     });

    //     Add active class to the current radio's parent `.payment-item-object`
    //     radio.closest('.payment-item-object').classList.add('active');
    // }
    function toggleActive(element) {
        // Ta bort 'active' från alla andra alternativ
        document.querySelectorAll('.payment-item-object').forEach(item => {
            item.classList.remove('active');
        });

        // Lägg till 'active' på det klickade elementet
        element.classList.add('active');
    }


</script>



